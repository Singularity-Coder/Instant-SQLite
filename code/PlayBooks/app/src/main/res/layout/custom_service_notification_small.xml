<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/iv_play_pause_small"
            android:layout_alignBottom="@+id/iv_play_pause_small"
            android:background="@color/purple_50"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_notification_track_title"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_play_pause_small"
            android:layout_alignBottom="@+id/iv_play_pause_small"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/iv_play_pause_small"
            android:layout_toEndOf="@+id/iv_image"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Book Name"
            android:textColor="@color/title_color" />

        <ImageButton
            android:id="@+id/iv_play_pause_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_rounded_square"
            android:backgroundTint="@color/purple_50"
            android:src="@drawable/round_pause_24"
            app:tint="@color/purple_500" />
    </RelativeLayout>

</LinearLayout>