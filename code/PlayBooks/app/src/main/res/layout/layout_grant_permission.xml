<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foregroundGravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:alpha="0.8"
        android:src="@drawable/outline_security_24"
        app:tint="@color/purple_100" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:ellipsize="end"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="@string/grant_storage_permission"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/title_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_give_permission"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/give_permission"
        android:textAllCaps="false"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_site_icon"
        app:strokeColor="@color/purple_100" />
</LinearLayout>
